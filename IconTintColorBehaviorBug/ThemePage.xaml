<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IconTintColorBehaviorBug.ThemePage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Themes" />
            <HorizontalStackLayout Spacing="8"
                                   RadioButtonGroup.GroupName="ThemesGroupName"
                                   RadioButtonGroup.SelectedValue="{Binding Theme}"
                                   HorizontalOptions="Center">
                <RadioButton Value="Light" Content="LIGHT" CheckedChanged="RadioButtonLight_OnCheckedChanged"/>
                <RadioButton Value="Dark" Content="DARK" CheckedChanged="RadioButtonDark_OnCheckedChanged"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>